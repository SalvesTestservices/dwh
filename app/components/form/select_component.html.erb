<% label = @mandatory ? "#{@label}*" : @label %>

<% if @position == "inline" %>
  <div class="py-3 mt-0 grid grid-cols-3 gap-4 items-start border-t border-gray-200">
    <%= @form.label label, class: "block text-sm font-medium text-gray-700 my-2" %>

    <% if @value.blank? %>
      <%= @form.collection_select @attribute, @collection, :first, :last, { include_blank: true }, { class: 'mt-1 block w-3/4 rounded-md border-gray-300 bg-gray-100 py-2 pl-3 pr-10 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm' } %>
    <% else %>
      <%= @form.collection_select @attribute, @collection, :id, @value, { include_blank: true }, { class: 'mt-1 block w-3/4 rounded-md border-gray-300 bg-gray-100 py-2 pl-3 pr-10 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm' } %>
    <% end %>
  </div>
<% else %>
  <div class="py-3 mt-0 flex flex-col mr-2 <%= @width %>">
    <%= @form.label label, class: "block text-sm font-medium text-gray-700 mt-1 mb-1" %>

    <% if @value.blank? %>
      <%= @form.collection_select @attribute, @collection, :first, :last, { include_blank: true }, { class: 'mt-1 block w-full rounded-md border-gray-300 bg-gray-100 py-2 pl-3 pr-10 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm' } %>
    <% else %>
      <%= @form.collection_select @attribute, @collection, :id, @value, { include_blank: true }, { class: 'mt-1 block w-full rounded-md border-gray-300 bg-gray-100 py-2 pl-3 pr-10 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm' } %>
    <% end %>
  </div>
<% end %>