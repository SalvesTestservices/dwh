<% if @upcoming_data[:birthdays].present? %>
  <div class="section">
    <h2 class="section-title">🎂 Verjaardagen</h2>
    <ul class="event-list">
      <% @upcoming_data[:birthdays].each do |birthday| %>
        <li class="event-item"><%= birthday %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @upcoming_data[:jubilees].present? %>
  <div class="section">
    <h2 class="section-title">🎉 Jubilea</h2>
    <ul class="event-list">
      <% @upcoming_data[:jubilees].each do |jubilee| %>
        <li class="event-item"><%= jubilee %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @upcoming_data[:birthdays].blank? && @upcoming_data[:jubilees].blank? %>
  <div style="text-align: center; padding: 30px 0; color: #6b7280;">
    <p>Volgende week zijn er geen verjaardagen of jubilea.</p>
  </div>
<% end %>