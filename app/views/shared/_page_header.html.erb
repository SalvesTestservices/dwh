<% @title = title %>

<header class="bg-white shadow">
  <%= render "shared/flash" %>

  <div class="w-11/12 mx-auto py-3">
    <div>
      <% unless breadcrumbs.blank? %>
        <div>
          <nav aria-label="Breadcrumb">
            <ol role="list" class="flex items-center space-x-1">
              <li>
                <div class="flex">
                  <%= link_to "Home", root_path, data: { turbo: false }, class: "underline text-xs font-medium text-gray-500 hover:text-gray-700" %>
                </div>
              </li>

              <% breadcrumbs.each do |breadcrumb| %>
                <% if breadcrumb[1].blank? %>
                  <li>
                    <div class="flex items-center">
                      <svg class="flex-shrink-0 h-3 w-3 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <p class="text-xs font-medium text-gray-500 hover:text-gray-700"><%= breadcrumb[0] %></p>
                    </div>
                  </li>
                <% else %>
                  <li>
                    <div class="flex items-center">
                      <svg class="flex-shrink-0 h-3 w-3 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <%= link_to breadcrumb[0], breadcrumb[1], class: "underline text-xs font-medium text-gray-500 hover:text-gray-700" %>
                    </div>
                  </li>
                <% end %>
              <% end %>

            </ol>
          </nav>
        </div>
      <% end %>

      <div class="flex flex-col md:flex-row md:justify-between">
        <% if @user_device == "desktop" %>
          <div class="w-full md:w-2/3 flex flex-start">
            <div class="mt-4 mr-3 text-center"><%= render(View::IconComponent.new(icon_type: icon[0], size: icon[1], color: icon[2])) %></div>
            <h2 class="mt-5 sm:mt-4 text-2xl sm:text-3xl font-bold leading-7 text-gray-700">
              <%= title %>
            </h2>
          </div>
        <% end %>
        
        <% unless buttons.blank? %>
          <div data-turbo-prefetch="false" class="w-full md:w-1/3 flex justify-center sm:justify-end mt-2 sm:mt-2 md:mt-0">
            <% buttons.each do |button| %>
              <% if button[2].blank? %>
                <%= link_to button[0], button[1], class: "whitespace-nowrap text-gray-700 bg-gray-100 hover:bg-gray-50 sm:h-10 mt-1 px-1 px-2 sm:px-4 py-2 text-sm mr-1 border border-gray-300 shadow-sm font-medium rounded" %>
              <% elsif button[2] == "post" %>
                <%= button_to button[0], button[1], class: "whitespace-nowrap text-gray-700 bg-gray-100 hover:bg-gray-50 sm:h-10 mt-1 px-1 px-2 sm:px-4 py-2 text-sm mr-1 border border-gray-300 shadow-sm font-medium rounded" %>
              <% elsif button[2] == "delete" %>
                <%= button_to button[0], button[1], method: :delete, class: "whitespace-nowrap text-white bg-red-600 hover:bg-red-700 sm:h-10 mt-1 px-1 px-2 sm:px-4 py-2 text-sm mr-1 border border-gray-300 shadow-sm font-medium rounded" %>
              <% end %>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</header>