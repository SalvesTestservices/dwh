<div class="flex min-h-full flex-col justify-center :py-12 sm:px-6 lg:px-8">
  <div class="flex flex-row justify-center">
    <div class="text-center text-3xl mb-16 p-5 bg-gray-800 text-white font-bold w-1/4 rounded-xl"><%= ENV["APP_NAME"] %></div>
  </div>

  <div class="sm:mx-auto sm:w-full">
    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900"><%= I18n.t(".devise.registrations.sign_up") %></h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= render "devise/shared/error_messages" %>
      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :post }) do |f| %>
        <%= f.hidden_field :admin_token, value: params[:admin_token] unless params[:admin_token].blank? %>

        <div class="mt-3">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.account.name') %></label>
          <div class="mt-1">
            <% if params[:admin_token].blank? %>
              <%= f.text_field :account_name, class: "block w-full appearance-none rounded-md bg-gray-100 border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm", autofocus: true %>
            <% else %>
              <% ActsAsTenant.without_tenant do %>
                <% account_name = Account.find_by(admin_token: params[:admin_token]).name %>
                <%= f.hidden_field :account_name, value: account_name %>
                <div class="block w-full appearance-none rounded-md bg-white border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm"><%= account_name %></div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="mt-3">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.account.country') %></label>
          <div class="mt-1">
            <%= f.select :account_country, 
              options_for_select(
                ISO3166::Country.all.sort_by(&:translation).map { |c| [c.translation(I18n.locale.to_s), c.alpha2] }),
                { include_blank: true },
                { class: "block bg-gray-100 block w-full shadow-sm focus:ring-gray-500 focus:border-gray-500 text-sm border-gray-300 rounded-md" }
            %>
          </div>
        </div>
        <div class="mt-5">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.user.first_name') %></label>
          <div class="mt-1">
            <%= f.text_field :first_name, class: "block w-full appearance-none rounded-md bg-gray-100 border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm" %>
          </div>
        </div>
        <div class="mt-5">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.user.last_name') %></label>
          <div class="mt-1">
            <%= f.text_field :last_name, class: "block w-full appearance-none rounded-md bg-gray-100 border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm" %>
          </div>
        </div>
        <div class="mt-5">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.user.email') %></label>
          <div class="mt-1">
            <%= f.email_field :email, class: "block w-full appearance-none rounded-md bg-gray-100 border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm" %>
          </div>
        </div>
        <div class="mt-5">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.user.password') %></label>
          <% if @minimum_password_length %>
            <em class="text-xs">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="mt-1">
            <%= f.password_field :password, class: "block w-full appearance-none rounded-md bg-gray-100 border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm" %>
          </div>
        </div>
        <div class="mt-5">
          <label class="block text-sm font-medium text-gray-700"><%= I18n.t('.activerecord.attributes.user.password_confirmation') %></label>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, class: "block w-full appearance-none rounded-md bg-gray-100 border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-zinc-500 focus:outline-none focus:ring-zinc-500 sm:text-sm" %>
          </div>
        </div>
        <div class="mt-5">
          <%= f.submit(class: 'flex w-full justify-center rounded-md border border-transparent bg-gray-800 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2', value: I18n.t(".devise.registrations.sign_up_short")) %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
