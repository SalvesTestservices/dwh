<% flash.each do |type, message| %>
  <% unless message == "true" %>
    <% if type == "notice" or type == "success" %>
      <%= content_tag(:div, message, class: "ta_notice mb-3 p-3 bg-green-100 text-green-700 border border-green-700 rounded text-xs font-medium text-center", data: { controller: "flash" }) %>
    <% else %>
      <%= content_tag(:div, message, class: "ta_alert mb-3 p-3 bg-red-100 text-red-700 border border-red-700 rounded text-xs font-medium text-center", data: { controller: "flash" }) %>
    <% end %>
  <% end %>
<% end %>

<% if resource.present? and resource.errors.any? %>
  <% resource.errors.full_messages.each do |message| %>
    <% unless message == "true" %>
      <div class="mb-3 p-3 bg-red-100 text-red-700 border border-red-700 rounded text-xs font-medium text-center"><%= message %></div>
    <% end %>
  <% end %>
<% end %>