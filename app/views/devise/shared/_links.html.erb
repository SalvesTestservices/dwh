<div class="mt-5 text-sm flex flex-col">
  <% if controller_name != 'sessions' %>
    <%= link_to I18n.t(".devise.sessions.signin"), new_session_path(resource_name), class: 'font-medium text-zinc-600 hover:underline hover:text-zinc-500' %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to I18n.t(".devise.sessions.forgot"), new_password_path(resource_name), class: 'font-medium text-zinc-600 hover:underline hover:text-zinc-500' %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-medium text-zinc-600 hover:underline hover:text-zinc-500" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-medium text-zinc-600 hover:underline hover:text-zinc-500" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <% unless provider.to_s == "microsoft" %>
          <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "font-medium text-zinc-600 hover:underline hover:text-zinc-500" %>
      <% end %>
    <% end %>
  <% end %>
</div>