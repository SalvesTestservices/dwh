<div class="w-full pt-5 pb-16 flex flex-row justify-end">
  <div class="w-1/2">
    <%= image_tag "logo.svg", alt: "Logo" %>
  </div>
  <div class="w-1/2 flex flex-row justify-end pt-2">
    <% if current_user %>
      <div class="pr-5 text-gray-800 pt-0.5"><%= I18n.t(".general.welcome") %> <%= current_user.full_name %></div>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-800 hover:text-gray-600 pr-5" do %>
        <%= render(View::IconComponent.new(icon_type: "logout", size: "small", color: "gray")) %>
      <% end %>
    <% end %>
  </div>
</div>