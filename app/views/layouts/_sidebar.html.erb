<div class="w-64 bg-white border-r border-gray-200">
  <div class="flex flex-row justify-center px-6 py-6">
    <%= link_to image_tag("logo.svg", alt: "Logo", class: "w-36 my-4"), root_path %>
  </div>
  
  <nav class="px-4 py-4 h-screen">
    <div class="space-y-1">
      <% if can?(:read, :datalab) %>
        <%= link_to datalab_reports_path, class: "flex items-center px-3 py-2 text-xl font-medium text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900" do %>
          <%= render(View::IconComponent.new(icon_type: "datalab", size: "medium", color: "gray")) %>
          <span class="ml-3"><%= I18n.t(".site.titles.data_lab") %></span>
        <% end %>
      <% end %>

      <% if can?(:read, :data_pipelines) %>
        <%= link_to dwh_dp_pipelines_path, class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900" do %>
          <%= render(View::IconComponent.new(icon_type: "pipeline", size: "small", color: "gray")) %>
          <span class="ml-3"><%= I18n.t(".dp_pipeline.titles.index") %></span>
        <% end %>
      <% end %>

      <% if can?(:read, :data_targets) %>
        <%= link_to data_targets_path, class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900" do %>
          <%= render(View::IconComponent.new(icon_type: "target", size: "small", color: "gray")) %>
          <span class="ml-3"><%= I18n.t(".data_target.titles.index") %></span>
        <% end %>
      <% end %>

      <% if can?(:read, :data_governance) %>
        <%= link_to data_governance_index_path, class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900" do %>
          <%= render(View::IconComponent.new(icon_type: "certificate", size: "small", color: "gray")) %>
          <span class="ml-3"><%= I18n.t(".data_governance.titles.index") %></span>
        <% end %>
      <% end %>

      <% if can?(:read, :data_api) %>
        <%= link_to api_docs_path, class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900" do %>
          <%= render(View::IconComponent.new(icon_type: "api", size: "small", color: "gray")) %>
          <span class="ml-3"><%= I18n.t(".site.titles.data_api") %></span>
        <% end %>
      <% end %>

      <% if can?(:read, :users) %>
        <%= link_to users_path, class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900" do %>
          <%= render(View::IconComponent.new(icon_type: "users", size: "small", color: "gray")) %>
          <span class="ml-3"><%= I18n.t(".site.titles.users_and_roles") %></span>
        <% end %>
      <% end %>
    </div>
  </nav>
</div>