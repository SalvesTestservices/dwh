<%= form_with url: data_targets_path, method: :get, local: true do %>
  <div class="w-full flex flex-row justify-start">
    <%= select_tag :company_id,
      options_for_select(
        [['', '']] + @account_companies.map { |company| 
          ["#{company.account_name} - #{company.name}", company.id]
        }
      ),
      class: "mr-3 block w-1/3 rounded-md border-gray-300 bg-gray-100 p-2 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm"
    %>
    <%= render(View::ButtonComponent.new(title: I18n.t(".general.select"), url: data_targets_path, button_type: "button", size: "medium")) %>
  </div>
<% end %>

