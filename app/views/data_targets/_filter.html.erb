<%= form_with url: data_targets_path, method: :get, local: true do %>
  <div class="w-full flex flex-row justify-start space-x-1">
    <%= select_tag :company_id,
      options_for_select(
        [['', '']] + @account_companies.map { |company| 
          ["#{company.account_name} - #{company.name}", company.id]
        },
        selected: params[:company_id]
      ),
      class: "block w-1/3 rounded-md border-gray-300 bg-white p-2 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm"
    %>
    <%= select_tag :year,
      options_for_select(
        [['', '']] + (Date.current.year - 1..Date.current.year + 1).to_a.map { |year| [year, year] },
        selected: @year
      ),
      class: "block w-24 rounded-md border-gray-300 bg-white p-2 text-base focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm"
    %>
    <%= render(View::ButtonComponent.new(title: I18n.t(".general.select"), url: data_targets_path, button_type: "button", size: "medium")) %>
  </div>
<% end %>
