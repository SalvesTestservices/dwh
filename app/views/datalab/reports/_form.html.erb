<%= form_with(model: report, 
    url: report.persisted? ? datalab_report_path(report) : datalab_reports_path,
    local: true) do |form| %>
  <% if report.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% report.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="divide-y divide-gray-300 bg-white py-4 shadow-sm ring-1 ring-gray-900/5 sm:mx-0 sm:rounded-lg sm:px-8 sm:pb-4 my-3 border border-gray-100">
    <div class="space-y-6">
      <div>
        <%= form.label I18n.t('.datalab.report.attributes.name'), class: "block text-sm font-medium leading-6 text-gray-900 pb-2" %>
        <%= form.text_field :name, class: "block w-full rounded-md border-0 py-1.5 bg-gray-50 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= form.label I18n.t('.datalab.report.attributes.description'), class: "block text-sm font-medium leading-6 text-gray-900 pb-2" %>
        <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-0 py-1.5 bg-gray-50 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= form.label I18n.t('.datalab.report.attributes.anchor_type'), class: "block text-sm font-medium leading-6 text-gray-900 pb-2" %>
        <%= form.select :anchor_type, available_anchors, { include_blank: "" }, 
            class: "block w-full rounded-md border-0 py-1.5 text-gray-900 bg-gray-50 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
      </div>

      <div class="flex items-center gap-x-3">
        <%= form.check_box :is_public, class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-600 bg-gray-50" %>
        <%= form.label :is_public, I18n.t('.datalab.report.attributes.is_public'), class: "text-sm leading-6 text-gray-900" %>
      </div>
    </div>
  </div>

  <div class="pt-5 ml-8 flex items-center justify-start gap-x-6">
    <%= form.submit I18n.t('.general.continue'), class: "sm:h-10 mt-1 px-1 sm:px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-gray-50 mr-1 border border-gray-300 shadow-sm font-medium rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
    <%= link_to I18n.t('.general.cancel'), datalab_reports_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
  </div>
<% end %>
