<div class="flex flex-col">
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-gray-900">Data Lab Reports</h1>
    <%= link_to 'New Report', new_datalab_report_path, 
        class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white hover:bg-blue-500" %>
  </div>

  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-lg mb-8">
    <div class="px-4 py-6 sm:px-6">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Your Reports</h2>
    </div>
    
    <%= render "report_list", reports: @reports, show_actions: true %>
  </div>

  <% if @shared_reports.any? %>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-lg">
      <div class="px-4 py-6 sm:px-6">
        <h2 class="text-base font-semibold leading-7 text-gray-900">Shared Reports</h2>
      </div>
      
      <%= render "report_list", reports: @shared_reports, show_actions: false %>
    </div>
  <% end %>
</div>
