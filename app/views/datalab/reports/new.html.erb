<div class="flex flex-col">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">New Data Lab Report</h1>
  </div>

  <%= form_with(model: @report, url: datalab_reports_path, local: true) do |form| %>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-lg p-6">
      <div class="space-y-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= form.label :anchor_type, "Data Source", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.select :anchor_type, @available_anchors, { include_blank: "Select a data source" }, 
              class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>

        <div class="flex items-center gap-x-3">
          <%= form.check_box :is_public, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" %>
          <%= form.label :is_public, "Make this report public", class: "text-sm leading-6 text-gray-900" %>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-end gap-x-6">
        <%= link_to "Cancel", datalab_reports_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        <%= form.submit "Continue", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>
  <% end %>
</div>
