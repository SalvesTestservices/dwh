<%= render "layouts/page_header", 
  breadcrumbs: @breadcrumbs, 
  title: "#{I18n.t('.datalab.report.titles.show')}: #{@report.name}", 
  icon: ["datalab", "medium", "gray"],
  buttons: nil
%>

<main>
  <div class="mx-auto max-w-8xl py-6 mt-2 flex flex-col">
    <% if @report.user_id == current_user.id %>
      <div class="flex flex-row justify-end w-full mb-5">
        <%= button_to datalab_report_path(@report), 
            method: :delete, 
            data: { 
              turbo_prefetch: false,
              turbo_confirm: I18n.t('.datalab.report.messages.confirmation')
            }, 
            class: "flex flex-row items-center px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-gray-50 mr-1 border border-gray-300 shadow-sm font-medium rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
          <%= render(View::IconComponent.new(icon_type: "delete", size: "small", color: "red")) %>
          <span class="ml-2"><%= I18n.t('.datalab.report.titles.delete') %></span>
        <% end %>
      </div>
    <% end%>

    <%= form_with(url: datalab_report_path(@report), method: :get, data: { controller: 'report', turbo_frame: 'report_data' }) do |form| %>
      <div class="bg-gray-50 shadow-sm ring-1 ring-gray-900/5 sm:rounded-lg p-4 mb-4 border border-gray-100">
        <div class="flex flex-row gap-4">
          <% @anchor_service.filterable_attributes.each do |attr| %>
            <% if attr.in?([:account_id, :contract, :role]) %>
              <div class="px-4">
                <%= form.label "filters[#{attr}]", @anchor_service.available_attributes[attr][:name], class: "block text-sm font-bold underline underline-offset-2 text-gray-700" %>
                <div class="mt-1">
                  <% filter_options_for_attribute(attr).each do |label, value| %>
                    <div class="flex items-center p-1">
                      <%= form.check_box "filters[#{attr}][]", 
                          { multiple: true, 
                            class: "h-4 w-4 rounded border-gray-300 text-gray-600 focus:ring-gray-600",
                            checked: params.dig(:filters, attr)&.include?(value.to_s)
                          }, value, nil %>
                      <%= form.label "filters[#{attr}][]", label, class: "ml-2 text-sm text-gray-600" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="flex flex-row justify-center space-x-4 w-full my-8">
        <%= form.button type: :submit, class: "flex flex-row items-center px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-gray-50 mr-1 border border-gray-300 shadow-sm font-medium rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
          <%= render(View::IconComponent.new(icon_type: "filter", size: "small", color: "gray")) %>
          <span class="ml-2"><%= I18n.t('.datalab.report.titles.filter') %></span>
        <% end %>
        <%= form.button formaction: export_datalab_report_path(@report, format: :xlsx),
                       formmethod: "get",
                       data: { turbo: false },
                       class: "flex flex-row items-center px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-gray-50 mr-1 border border-gray-300 shadow-sm font-medium rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
          <%= render(View::IconComponent.new(icon_type: "download", size: "small", color: "gray")) %>
          <span class="ml-2"><%= I18n.t('.datalab.report.titles.download') %></span>
        <% end %>

        <% if @report.user_id == current_user.id %>
          <%= link_to datalab_designer_path(@report), data: { turbo: false, turbo_prefetch: false }, class: "flex flex-row items-center px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-gray-50 mr-1 border border-gray-300 shadow-sm font-medium rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
            <%= render(View::IconComponent.new(icon_type: "edit", size: "small", color: "gray")) %>
            <span class="ml-2"><%= I18n.t('.datalab.report.titles.edit') %></span>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <%= turbo_frame_tag "report_data" do %>

      <div class="flex flex-row justify-between">
        <div class="w-1/3 flex flex-row justify-start">
          <div class="text-base font-medium text-gray-900 my-3"><%= @records.count %> records</div>
        </div>
        <div class="w-1/3 flex flex-row justify-end">
          <% if @pagy.pages > 1 %>
            <div class="px-4 py-3">
              <%== pagy_nav(@pagy) %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full">
          <%= render "table_header", report_data: @report_data, anchor_service: @anchor_service, report: @report, records: @records %>
          <tbody class="divide-y divide-gray-200">
            <%= render "table_rows", report_data: @report_data %>
          </tbody>
        </table>
      </div>
      
      <% if @pagy.pages > 1 %>
        <div class="px-4 py-3">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    <% end %>
  
  </div>
</main>