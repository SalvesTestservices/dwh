<%= turbo_frame_tag dom_id(dp_run) do %>
  <% decorate dp_run do |decorates| %>
    <li class="bg-white mb-1 px-4 py-2 shadow-sm ring-1 ring-gray-900/5 sm:rounded-lg border-l-8 <%= decorates.status %> border-t border-r border-b border-gray-300 flex flex-row justify-between gap-x-6">
      <div class="w-3/12">
        <div class="flex flex-col">
          <p class="text-sm font-semibold leading-6 text-gray-700"><%= I18n.t('.dp_run.form.started_at') %></p>
          <p class="text-xs leading-5 text-gray-500"><%= decorates.data_field(dp_run.started_at, "time") %></p>
        </div>
      </div>
      <div class="w-3/12">
        <div class="flex flex-col">
          <p class="text-sm font-semibold leading-6 text-gray-700"><%= I18n.t('.dp_run.form.finished_at') %></p>
          <p class="text-xs leading-5 text-gray-500"><%= decorates.data_field(dp_run.finished_at, "time") %></p>
        </div>
      </div>
      <div class="w-4/12">
        <div class="flex flex-col">
          <p class="text-sm font-semibold leading-6 text-gray-700"><%= I18n.t('.dp_run.form.duration') %></p>
          <p class="text-xs leading-5 text-gray-500"><%= decorates.duration %></p>
        </div>
      </div>
      <div class="w-2/12 flex flex-row justify-center items-center gap-x-4">
        <%= render(View::ButtonComponent.new(title: I18n.t('.general.details'), url: dwh_dp_run_path(dp_run), button_type: "link_turbo", size: "small")) %>
      </div>
    </li>
  <% end %>
<% end %>