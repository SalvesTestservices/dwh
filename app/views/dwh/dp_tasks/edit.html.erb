<%= turbo_frame_tag dom_id(@dp_task) do %>
  <% status = @dp_task.status == "active" ? "border-l-green-500" : "border-l-gray-500" %>

  <% decorate @dp_task do |decorates| %>
    <%= form_with(model: @dp_task) do |form| %>
      <li class="bg-gray-50 mb-1 px-4 py-2 shadow-sm ring-1 ring-gray-900/5 sm:rounded-lg border-l-8 <%= status %> border-t border-r border-b border-gray-300 flex flex-row justify-between gap-x-6">
        <div class="w-1/12 text-xl text-center font-bold">
          <%= form.text_field :sequence, autofocus: true, class: "bg-white w-7 block text-gray-800 text-xs p-1 border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500" %>
        </div>
        <div class="w-10/12 flex flex-col">
          <div class="w-full">
            <p class="text-sm font-semibold leading-6 text-gray-900">
              <%= form.text_field :name, class: "bg-white w-full block text-xs text-gray-800 p-1 border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500" %>
            </p>
          </div>
          <div class="mt-1 grid grid-cols-3 gap-x-2 gap-y-1">
            <div class="text-xs text-gray-800"><%= I18n.t(".dp_task.form.description") %></div>
            <div class="text-xs text-gray-800 text-center"><%= I18n.t(".dp_task.form.task_key") %></div>
            <div class="text-xs text-gray-800 text-center"><%= I18n.t(".dp_task.form.depends_on") %></div>

            <div class="text-xs text-gray-400 truncate">
              <%= form.text_field :description, class: "bg-white w-full block text-xs text-gray-800 p-1 border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500" %>
            </div>
            <div class="text-xs text-gray-400 text-center truncate">
              <%= form.text_field :task_key, class: "bg-white w-full block text-xs text-gray-800 p-1 border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500" %>
            </div>
            <div class="text-xs text-gray-400 text-center truncate">
                <%= form.select :depends_on, options_from_collection_for_select(@dp_tasks, 'task_key', 'name', @dp_task.depends_on), {}, { multiple: true, class: "bg-white w-full block text-xs text-gray-800 p-1 border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500" } %>
            </div>
          </div>
        </div>
        <div class="w-1/12 flex flex-none items-center gap-x-4">
          <%= button_to dwh_dp_task_path(@dp_task), method: :post, class: "mt-1" do %>
            <%= render(View::IconComponent.new(icon_type: "save", size: "small", color: "gray")) %>
          <% end %>
        </div>
      </li>
    <% end %>
  <% end %>
<% end %>
